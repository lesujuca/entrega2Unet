{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel-php"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://tu-app-vercel.com",
    "VIEW_COMPILED_PATH": "/tmp"
  }
}